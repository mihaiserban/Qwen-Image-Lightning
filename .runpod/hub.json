{
  "name": "Qwen-Image-Lightning-Edit",
  "description": "Fast Qwen Image Edit Lightning (4/8-step distillation) for personalized vacation photos with face preservation, pose, bokeh, and grain.",
  "type": "serverless",
  "image_name": "runpod/pytorch:2.0.1-py3.10-cuda11.8.0-devel-ubuntu22.04",
  "runpod": {
    "gpu_type_id": "NVIDIA L4", // Or "NVIDIA RTX 4090" for cheaper
    "gpu_count": 1,
    "min_workers": 0,
    "max_workers": 3,
    "idle_timeout": 300, // 5 min
    "command": "python handler.py",
    "env": {
      "HF_TOKEN": "{{HF_TOKEN}}" // User-provided for model downloads
    },
    "volume": {
      "mount_path": "/workspace",
      "size_gb": 100 // For Qwen LoRAs (~10 GB) + cache
    }
  },
  "meta": {
    "icon": "https://raw.githubusercontent.com/ModelTC/Qwen-Image-Lightning/main/icon.png", // Optional repo icon
    "cover": "https://raw.githubusercontent.com/ModelTC/Qwen-Image-Lightning/main/cover.jpg", // Optional banner
    "tags": [
      "image-generation",
      "editing",
      "qwen",
      "lightning",
      "text-to-image"
    ]
  },
  "version": "1.0.0"
}
